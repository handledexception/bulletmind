{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean build debug (x64)",
            "type": "shell",
            "group": "build",
            "windows": {
                "command": "rmdir /s /q ${workspaceFolder}\\ninja-debug-x64",
            }
        },
        {
            "label": "CMake Generate Debug",
            "type": "shell",
            "group": "build",
            "dependsOn": "Clean Build",
            "windows": {
                "command": "${workspaceFolder}\\cmake-debug-x86.bat"
            }
        },
        {
            "label": "ninja build debug (x86)",
            "type": "shell",
            "group":{
                "kind": "build",
                "isDefault": false
            },
            "windows": {
                "command": "ninja",
                "args": [ "-f", "build.ninja" ]
            },
            "options": {
                "cwd": "${workspaceFolder}\\ninja-debug-x86"
            }
        },
        {
            "label": "ninja build debug (x64)",
            "type": "shell",
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "ninja",
                "args": [ "-f", "build.ninja" ]
            },
            "options": {
                "cwd": "${workspaceFolder}\\ninja-debug-x64"
            }
        }
    ]
}
